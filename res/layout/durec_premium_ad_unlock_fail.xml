<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ad_fail_icon"
        android:layout_width="34dp"
        android:layout_height="42dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/durec_emoji_fail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="@string/durec_ad_unlock_recommend_dl_loading_error"
        android:textColor="@color/text_light_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/ad_fail_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ad_fail_icon"
        app:layout_constraintTop_toTopOf="@id/ad_fail_icon" />

</android.support.constraint.ConstraintLayout>