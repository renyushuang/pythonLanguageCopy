<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_product_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/durec_receivead_timeshow_coin"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$1.99 - $2.99/Download and use for 5+ times" />

    <View
        android:id="@+id/durec_timeshow_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:background="#d2d2d2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_product_revenue" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_product_link_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:text="@string/durec_timeshow_commodity_purchase_link"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_divider_line" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_product_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/durec_timeshow_product_link_button"
        app:layout_constraintStart_toStartOf="@id/timeshow_item_product_link_title"
        app:layout_constraintTop_toBottomOf="@id/timeshow_item_product_link_title"
        tools:text="https://www.baidu.com" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_product_link_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/durec_common_ok_btn_selector_reverse"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="80dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/durec_copy_link"
        android:textColor="@color/durec_common_ok_btn_text_color_reverse"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/durec_timeshow_product_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/durec_timeshow_product_link" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_product_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:text="@string/durec_timeshow_product_revenue_desc"
        android:textColor="@color/text_light_gray"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@id/durec_timeshow_product_link_button"
        app:layout_constraintStart_toStartOf="@id/durec_timeshow_product_link"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_product_link" />

    <View
        android:id="@+id/timeshow_item_product_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="29dp"
        android:background="#e8e8e8"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_product_des" />
</android.support.constraint.ConstraintLayout>