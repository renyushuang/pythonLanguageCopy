<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duapps.screen.recorder.main.settings.debug.BillingDebugActivity">

    <Button
        android:id="@+id/query_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已购商品？"
        android:onClick="onQueryPurchasedClicked"/>
    <Button
        android:id="@+id/query_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品详情"
        android:onClick="onQueryDetailClicked"
        app:layout_constraintTop_toBottomOf="@id/query_purchased"/>
    <Button
        android:id="@+id/purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发起购买"
        android:onClick="onPurchaseClicked"
        app:layout_constraintTop_toBottomOf="@id/query_detail"/>

    <Button
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买历史"
        android:onClick="onHistoryClicked"
        app:layout_constraintTop_toBottomOf="@id/purchase"/>
    <TextView
        android:id="@+id/console"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:background="#eeeeee"
        />
</android.support.constraint.ConstraintLayout>
