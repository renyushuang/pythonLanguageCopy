<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/durec_live_reward_info_game_bg_portrait" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <FrameLayout
            android:id="@+id/component_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:padding="10dp"
                android:src="@drawable/durec_live_white_tool_selector" />

            <ImageView
                android:id="@+id/btn_screen_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:padding="10dp"
                android:src="@drawable/durec_live_location_screen_rotate_selector" />

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/btn_save"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/durec_live_reward_info_display_btn_selector"
                android:gravity="center"
                android:text="@string/durec_common_ok"
                android:textColor="@color/durec_live_info_display_setting_btn_text_color"
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

