<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/merge_filter_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@drawable/durec_merge_video_and_image_close_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/merge_filter_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/durec_merge_video_and_image_confirm_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/merge_filter_recycle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10.5dp"
        android:paddingRight="10.5dp"
        app:layout_constraintBottom_toTopOf="@id/merge_filter_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/merge_filter_close" />

    <CheckBox
        android:id="@+id/merge_filter_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/merge_filter_checkbox_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="@string/durec_apply_to_all"
        android:textColor="#888888"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/merge_filter_checkbox"
        app:layout_constraintLeft_toRightOf="@id/merge_filter_checkbox"
        app:layout_constraintTop_toTopOf="@id/merge_filter_checkbox"
        app:layout_constraintWidth_default="spread" />
</android.support.constraint.ConstraintLayout>