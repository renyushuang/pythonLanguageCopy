<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingStart="16dp">

    <Space
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/tv_withdraw_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_withdraw_amount"
        tools:text="liuhang@gmail.com" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/tv_withdraw_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textColor="#888888"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        tools:text="2018-10-10" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/tv_withdraw_amount"
        android:layout_width="@dimen/durec_ytb_ads_revenue_record_income_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/guide_line"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$320" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/tv_withdraw_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_line"
        tools:text="Completed" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/tv_withdraw_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="15dp"
        android:textColor="#888888"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_withdraw_time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/durec_divide_line_color"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>