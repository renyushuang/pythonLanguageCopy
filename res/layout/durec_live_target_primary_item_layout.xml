<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/durec_list_select_dir_icon_normal"/>

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/text_for_xml_preview_empty"
            android:textColor="@color/durec_radio_dialog_item_text_selector"
            android:textSize="15dp"/>

        <ProgressBar
            android:id="@+id/item_progress_bar"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_illustrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/durec_choose_sdcard_sd_card_unable_msg"
        android:textColor="#999999"
        android:textSize="13dp"
        android:visibility="gone"/>
</LinearLayout>