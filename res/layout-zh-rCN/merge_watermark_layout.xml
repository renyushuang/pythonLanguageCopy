<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/water_mark_id"
        android:layout_width="@dimen/durec_water_mark_width"
        android:layout_height="@dimen/durec_water_mark_height"
        android:src="@drawable/durec_setting_watermark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/water_mark_close_id"
        android:layout_width="@dimen/durec_wm_close_size"
        android:layout_height="@dimen/durec_wm_close_size"
        android:layout_marginLeft="@dimen/durec_water_mark_margin"
        android:src="@drawable/durec_edit_player_delete_icon_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/water_mark_id"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>