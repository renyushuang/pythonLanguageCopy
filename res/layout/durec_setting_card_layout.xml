<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13.3dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp">

        <ImageView
            android:id="@+id/setting_card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="23.3dp"
            android:src="@drawable/durec_settings_usage_permission_icon" />

        <View
            android:id="@+id/setting_card_dot"
            android:layout_width="5.3dp"
            android:layout_height="5.3dp"
            android:layout_alignRight="@id/setting_card_icon"
            android:layout_alignTop="@id/setting_card_icon"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/durec_small_red_dot"
            android:visibility="visible" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/setting_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/setting_card_icon"
            android:layout_toRightOf="@id/setting_card_icon"
            android:gravity="left"
            android:text="@string/durec_setting_guide_open_permissions"
            android:textColor="@color/durec_settings_item_title_color"
            android:textSize="13dp" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/setting_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_item_title"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/setting_card_icon"
            android:gravity="left"
            android:text=""
            android:textColor="#fda418"
            android:textSize="11sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/setting_item_title"
            android:layout_marginTop="6.7dp"
            android:gravity="center_vertical">

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/setting_item_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6.7dp"
                android:text="@string/durec_common_enable"
                android:textColor="@color/durec_colorPrimary"
                android:textSize="13.3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/durec_settings_usage_permission_btn_selector" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>