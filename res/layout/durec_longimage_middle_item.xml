<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp">

    <LinearLayout
        android:id="@+id/durec_stitch_scissors1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/durec_stitch_scissors1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/durec_stitch_scissors_to_cut" />

        <ImageView
            android:id="@+id/durec_stitch_reset"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/durec_stitch_reset_selector" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/durec_stitch_scissors2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/durec_stitch_scissors2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/durec_stitch_cuting_selector" />

        <ImageView
            android:id="@+id/durec_stitch_cancel"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/durec_stitch_cancel_selector" />
    </LinearLayout>

</FrameLayout>