<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/ytb_revenue_record_item_add_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="23dp"
        android:text="@string/durec_add_new_promotion_video"
        android:textColor="#888888"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ytb_revenue_record_item_add_video_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/durec_ytb_ads_add_video_right_arrow_selector"
        app:layout_constraintBottom_toBottomOf="@+id/ytb_revenue_record_item_add_video"
        app:layout_constraintStart_toEndOf="@+id/ytb_revenue_record_item_add_video"
        app:layout_constraintTop_toTopOf="@+id/ytb_revenue_record_item_add_video" />

</android.support.constraint.ConstraintLayout>