<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:src="@drawable/durec_setting_btn_selector"/>

    <View
        android:id="@+id/durec_small_red_dot"
        android:layout_width="5.3dp"
        android:layout_height="5.3dp"
        android:layout_toRightOf="@id/icon"
        android:layout_above="@id/icon"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/durec_small_red_dot"
        android:visibility="gone"/>
</RelativeLayout>