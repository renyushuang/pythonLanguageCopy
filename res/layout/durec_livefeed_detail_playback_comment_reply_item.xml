<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="52.6dp"
    android:layout_marginTop="6dp"
    android:paddingRight="13.3dp">

    <android.support.v7.widget.CardView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/normal_item_author_image"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.3dp"
        android:orientation="vertical">

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/normal_item_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_for_xml_preview_middle"
            android:textColor="@color/durec_colorPrimary"
            android:textSize="12dp" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/normal_item_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/text_for_xml_preview_long"
            android:textColor="#535353"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>