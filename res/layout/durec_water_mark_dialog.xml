<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270.3dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="133.3dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/durec_live_reward_info_game_bg_land" />

        <ImageView
            android:id="@+id/water_mark_gb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/durec_setting_watermark" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/item_water_mark"
        style="@style/durec_setting_item_style"
        android:paddingLeft="0dp">

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/setting_item_watermark_title"
            style="@style/durec_setting_item_title_text_multi_lines"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_toLeftOf="@+id/watermark_switch"
            android:gravity="left"
            android:text="@string/durec_enable_watermark" />

        <com.duapps.screen.recorder.ui.FontTextView
            style="@style/durec_setting_item_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/setting_item_watermark_title"
            android:layout_marginLeft="0dp"
            android:layout_toLeftOf="@+id/watermark_switch"
            android:gravity="left"
            android:text="@string/durec_setting_watermark_msg" />

        <com.duapps.screen.recorder.ui.DuSwitchButton
            android:id="@+id/watermark_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</LinearLayout>