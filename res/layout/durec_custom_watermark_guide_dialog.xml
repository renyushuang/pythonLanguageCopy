<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/durec_white"
    app:cardCornerRadius="3.3dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/durec_custom_watermark_guide_top_img"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/durec_custom_watermark_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/durec_custom_watermark_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:padding="5dp"
            android:src="@drawable/durec_dialog_close_btn_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/durec_custom_watermark_prompt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="17dp"
            android:gravity="left"
            android:text="@string/durec_custom_watermark_guide"
            android:textColor="@color/durec_head_item_text_color"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/durec_custom_watermark_guide_top_img" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/durec_custom_watermark_prompt_low_line_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:gravity="left"
            android:text="@string/durec_custom_watermark_guide_sec_line"
            android:textColor="@color/durec_head_item_text_color"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/durec_custom_watermark_prompt_tv" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/durec_custom_watermark_guide_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/screen_bottom_large_btn_height"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/durec_common_ok_btn_selector_reverse"
            android:gravity="center"
            android:text="@string/durec_custom_watermark_btn"
            android:textColor="@color/durec_common_ok_btn_text_color_reverse"
            android:textSize="@dimen/screen_bottom_large_btn_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/durec_custom_watermark_prompt_low_line_tv" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>