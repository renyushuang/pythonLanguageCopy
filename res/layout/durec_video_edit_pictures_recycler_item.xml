<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommended_picture_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/durec_add_bg_picture_item_width"
        android:layout_height="@dimen/durec_add_bg_picture_item_height"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <FrameLayout
            android:id="@+id/add_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/durec_picture_add_bg_selector">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/durec_picture_add_icon_selector" />
        </FrameLayout>

        <ImageView
            android:id="@+id/recommended_picture"
            android:layout_width="@dimen/durec_add_bg_picture_item_width"
            android:layout_height="@dimen/durec_add_bg_picture_item_height"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/durec_video_picture_select_icon_selector" />
    </FrameLayout>
</FrameLayout>