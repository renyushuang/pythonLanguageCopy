<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/picker_video_thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/picker_video_thumb"
            android:layout_width="110.7dp"
            android:layout_height="62.3dp"
            android:src="@drawable/durec_local_video_placeholder" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/picker_video_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="5dip"
            android:background="@drawable/durec_picture_select_background"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="@dimen/__picker_picture_select_icon_size"
            android:minHeight="@dimen/__picker_picture_select_icon_size"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/picker_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/durec_video_duration_bg"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:textColor="@android:color/white"
            android:textSize="10.6dp"
            tools:text="05:35" />
    </android.support.v7.widget.CardView>

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/picker_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textColor="#535353"
        android:textSize="10.6dp"
        app:layout_constraintTop_toBottomOf="@+id/picker_video_thumb_layout"
        tools:text="20161031_140203" />
</android.support.constraint.ConstraintLayout>