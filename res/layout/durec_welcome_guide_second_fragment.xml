<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/durec_welcome_view2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/durec_fw_close"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp"
        android:src="@drawable/durec_float_close_selector"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/durec_guide_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="185dp"
        android:layout_marginLeft="31dp"
        android:src="@drawable/durec_welcome_guide_track" />

    <FrameLayout
        android:id="@+id/durec_float_center_layout"
        android:layout_width="@dimen/durec_float_center_size"
        android:layout_height="@dimen/durec_float_center_size"
        android:layout_gravity="right"
        android:layout_marginRight="33dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/durec_float_center_bg_selector">

        <ImageView
            android:id="@+id/durec_float_center_iconview"
            android:layout_width="@dimen/durec_floating_window_center_view_size"
            android:layout_height="@dimen/durec_floating_window_center_view_size"
            android:layout_gravity="center"
            android:background="@drawable/durec_float_center_bg_selector"
            android:src="@drawable/durec_float_center_rec_selector" />

    </FrameLayout>


    <ImageView
        android:id="@+id/durec_guide_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/durec_guide_finger" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_text_view"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="223dp"
        android:gravity="center|left"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/durec_white"
        android:textSize="@dimen/durec_welcome_guide_text_size" />
</FrameLayout>