<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/theme_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/durec_theme_offical_orange_icon"
        app:layout_constraintDimensionRatio="w, 11:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/theme_vip"
        android:layout_width="28dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="7dp"
        android:src="@drawable/durec_premium_icon"
        app:layout_constraintStart_toStartOf="@id/theme_icon"
        app:layout_constraintTop_toBottomOf="@id/theme_icon" />

    <ImageView
        android:id="@+id/theme_check"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/durec_promotion_ad_selected"
        app:layout_constraintBottom_toBottomOf="@id/theme_icon"
        app:layout_constraintStart_toStartOf="@id/theme_icon" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="start|top"
        android:lines="2"
        android:text="@string/durec_theme_offical_orange"
        android:textColor="#535353"
        android:textSize="42px"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/theme_new"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/theme_vip"
        app:layout_constraintTop_toBottomOf="@id/theme_icon" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/theme_new"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/durec_common_new_icon_bg"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="@string/durec_mark_new"
        android:textColor="@color/durec_white"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/theme_name"
        app:layout_constraintTop_toBottomOf="@id/theme_icon"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>