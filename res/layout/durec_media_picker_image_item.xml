<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <ImageView
        android:id="@+id/picker_image_thumb"
        android:layout_width="110.7dp"
        android:layout_height="110.7dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/picker_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_margin="5dip"
        android:background="@drawable/durec_picture_select_background"
        android:clickable="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="@dimen/__picker_picture_select_icon_size"
        android:minHeight="@dimen/__picker_picture_select_icon_size"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

</android.support.v7.widget.CardView>
