<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/durec_premium_bg_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/setting_item_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="6.7dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/durec_premium_features_mark" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/setting_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.7dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="@string/durec_premium_features"
        android:textColor="#e76617"
        android:textSize="15dp" />

</LinearLayout>