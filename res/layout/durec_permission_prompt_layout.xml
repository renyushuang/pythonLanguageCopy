<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/durec_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/durec_white"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="9dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="9dp">

                <com.duapps.screen.recorder.ui.FontTextView
                    android:id="@+id/durec_permission_prompt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/durec_permission_prompt_msg"
                    android:textColor="@color/durec_black"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="17dp">

                    <ImageView
                        android:id="@+id/durec_permission_prompt_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/durec_permission_prompt_uncheck_icon" />

                    <com.duapps.screen.recorder.ui.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="@string/durec_permission_remember_text"
                        android:textColor="@color/durec_black"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="16dp"
                    android:gravity="right">

                    <com.duapps.screen.recorder.ui.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/durec_common_cancel"
                        android:textAllCaps="true"
                        android:textColor="#00a090"
                        android:textSize="11dp" />

                    <com.duapps.screen.recorder.ui.FontTextView
                        android:id="@+id/durec_permission_prompt_start_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:background="@drawable/durec_permission_prompt_start_now_bg"
                        android:padding="5dp"
                        android:text="@string/durec_permission_action_text"
                        android:textAllCaps="true"
                        android:textColor="#00a090"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <ImageView
        android:id="@+id/durec_permission_prompt_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="40dp"
        android:src="@drawable/durec_permission_prompt_hand" />
</FrameLayout>