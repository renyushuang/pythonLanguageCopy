<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/durec_edit_video_trim_selector" />

        <ImageView
            android:id="@+id/icon_premium_mark"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/icon"
            android:src="@drawable/durec_premium_features_mark"
            android:visibility="gone" />

        <View
            android:id="@+id/red_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/icon"
            android:background="@drawable/durec_small_red_dot"
            android:visibility="gone" />

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16.67dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/durec_common_trim"
            android:textColor="@color/durec_edit_video_tool_text_color"
            android:textSize="12dp" />

    </RelativeLayout>
</LinearLayout>