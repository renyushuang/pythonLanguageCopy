<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/durec_livefloat_center_layout_full"
        android:layout_width="@dimen/durec_float_center_size"
        android:layout_height="@dimen/durec_float_center_size"
        android:layout_gravity="center"
        android:visibility="visible">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/durec_livefloat_center_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#7f000000"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:contentPadding="2dp">

            <ImageView
                android:id="@+id/durec_livefloat_center_iconview"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/durec_livefloat_live_selector" />

            <ImageView
                android:id="@+id/durec_livefloat_center_avatar_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/durec_livefloat_live_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/durecord_button_init_time"
                android:textColor="@color/theme_rec_time_view_text_color"
                android:textSize="@dimen/durec_float_window_time_text_size"
                android:visibility="gone" />

            <View
                android:id="@+id/durec_livefloat_center_iconview_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/durec_livefloat_center_view_circle" />

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/durec_livefloat_live_status"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="3.2dp"
            android:layout_marginRight="3.2dp"
            android:background="@drawable/durec_live_status_green"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/durec_livefloat_center_layout_half"
        android:layout_width="@dimen/durec_float_center_size"
        android:layout_height="@dimen/durec_float_center_size">

        <ImageView
            android:id="@+id/durec_livefloat_half_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/durec_livefloat_half_green"
            android:visibility="visible" />
    </FrameLayout>

</FrameLayout>
