<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="106.67dp"
            android:layout_height="60dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/thumb_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/durec_local_video_placeholder" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/durec_media_controller_play_selector" />
        </android.support.v7.widget.CardView>

        <com.duapps.screen.recorder.ui.FontTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9.67dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:textColor="#666666"
            android:textSize="13.6dp" />
    </LinearLayout>
</LinearLayout>
