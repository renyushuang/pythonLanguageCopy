<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_reply_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/custom_reply_item_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/durec_settings_detail_btn_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/custom_reply_item_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/durec_settings_item_title_color"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/custom_reply_item_status"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="asddffaasdsdfasdff aasdsdfa sdffaa asddffaasdsdfasdff"/>

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/custom_reply_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_marginRight="14dp"
        android:textColor="#fda32f"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/custom_reply_item_right_arrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/durec_video_resolution_standard"/>

</android.support.constraint.ConstraintLayout>