<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/live_guide_image"
                android:layout_width="314dp"
                android:layout_height="176.7dp"
                android:scaleType="fitXY" />

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/live_guide_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="18dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="@color/durec_colorPrimary"
                android:textSize="18dp" />

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/live_guide_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:textColor="#5f5f5f"
                android:textSize="14dp" />

            <com.duapps.recorder.base.ui.styleable.ConfirmTextView
                android:id="@+id/live_guide_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="39dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/durec_common_next"
                android:textSize="17dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>