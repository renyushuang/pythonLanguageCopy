<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/snitch_imageview_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/durec_stitch_item_top_frame">

        <ImageView
            android:id="@+id/snitch_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />
    </FrameLayout>

    <com.duapps.screen.recorder.main.picture.ui.RangeSeekBar
        android:id="@+id/snitch_rangeseekbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>