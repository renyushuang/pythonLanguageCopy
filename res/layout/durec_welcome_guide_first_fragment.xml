<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/durec_welcome_view1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical">

    <!-- headsup-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/durec_white"
            android:orientation="vertical">

            <include
                layout="@layout/durec_cust_notic_normal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/durec_noti_action_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/action_record_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/durec_rec_noti_start_selector" />

                <ImageView
                    android:id="@+id/action_home_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/durec_rec_noti_home_selector" />

                <ImageView
                    android:id="@+id/action_tools_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/durec_float_tools_selector" />

                <ImageView
                    android:id="@+id/action_screenshot_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/durec_float_live_normal" />

                <ImageView
                    android:id="@+id/action_close_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/durec_rec_noti_exit_selector" />
            </LinearLayout>
        </LinearLayout>

        <com.duapps.screen.recorder.ui.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/durec_guide_notifaction"
            android:textColor="@color/durec_white"
            android:textSize="@dimen/durec_welcome_guide_text_size" />
    </LinearLayout>
</FrameLayout>