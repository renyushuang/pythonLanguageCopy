<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_product_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="16dp"
        android:text="@string/durec_timeshow_product_video_title"
        android:textColor="@color/durec_main_text_color"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/timeshow_item_product_video_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_product_video_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/timeshow_item_product_video_title"
        app:layout_constraintLeft_toRightOf="@+id/timeshow_item_product_video_title" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_product_video_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:text="@string/durec_timeshow_product_video_subtitle"
        android:textColor="@color/text_light_gray"
        android:textSize="13.3dp"
        app:layout_constraintBottom_toTopOf="@id/timeshow_item_product_video_preview"
        app:layout_constraintLeft_toLeftOf="@id/timeshow_item_product_video_title"
        app:layout_constraintRight_toLeftOf="@+id/timeshow_item_product_video_button"
        app:layout_constraintTop_toBottomOf="@id/timeshow_item_product_video_title" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_product_video_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/durec_common_ok_btn_selector_reverse"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="80dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/durec_common_download"
        android:textColor="@color/durec_common_ok_btn_text_color_reverse"
        android:textSize="13dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/timeshow_item_product_video_content" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_product_video_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="23dp"
        android:drawableRight="@drawable/durec_receivead_video_preview_arrow_selector"
        android:drawablePadding="4dp"
        android:text="@string/durec_common_preview"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@id/durec_ad_receive_showtime_item_bottom_line"
        app:layout_constraintLeft_toLeftOf="@id/timeshow_item_product_video_content"
        app:layout_constraintTop_toBottomOf="@id/timeshow_item_product_video_content" />

    <View
        android:id="@+id/durec_ad_receive_showtime_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e8e8e8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeshow_item_product_video_preview" />
</android.support.constraint.ConstraintLayout>