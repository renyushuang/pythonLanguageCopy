<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/thanks_toolbar"
        layout="@layout/durec_toolbar_layout" />


    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/thanks_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/thanks_title"
        android:textColor="@color/durec_main_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thanks_toolbar"
        app:layout_constraintWidth_default="wrap" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/thanks_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:text="@string/thanks_subtitle"
        android:textColor="@color/durec_main_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thanks_title"
        app:layout_constraintWidth_default="wrap" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/hugarian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="@string/thanks_country_hugarian"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thanks_subtitle" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/hugarian_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="@string/thanks_country_hugarian_names"
        android:textColor="@color/durec_main_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hugarian" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/azerbaycan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/thanks_country_azerbaycan"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hugarian_names" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/azerbaycan_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="@string/thanks_country_azerbaycan_names"
        android:textColor="@color/durec_main_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/azerbaycan" />

</android.support.constraint.ConstraintLayout>