<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/live_state_second_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/durec_live_panel_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <!--ytb audience-->
        <RelativeLayout
            android:id="@+id/live_ytb_status_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/live_ytb_status_indicator_icon"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/durec_multi_live_status_indicator_good"/>

            <ImageView
                android:id="@+id/live_ytb_audience_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/live_ytb_status_indicator_icon"
                android:src="@drawable/durec_multi_live_youtube_viewer_count_icon"/>

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/live_ytb_audience_counts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/live_ytb_audience_image_view"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="14dp"/>
        </RelativeLayout>

        <!--facebook audience-->
        <RelativeLayout
            android:id="@+id/live_fb_status_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/live_fb_status_indicator_icon"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/durec_multi_live_status_indicator_good"/>

            <ImageView
                android:id="@+id/live_fb_audience_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/live_fb_status_indicator_icon"
                android:src="@drawable/durec_multi_live_facebook_viewer_count_icon"/>

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/live_fb_audience_counts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/live_fb_audience_image_view"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="14dp"/>
        </RelativeLayout>

        <!--twitch audience-->
        <RelativeLayout
            android:id="@+id/live_twitch_status_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp">

            <ImageView
                android:id="@+id/live_twitch_status_indicator_icon"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/durec_multi_live_status_indicator_good"/>

            <ImageView
                android:id="@+id/live_twitch_audience_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/live_twitch_status_indicator_icon"
                android:src="@drawable/durec_multi_live_twitch_viewer_count_icon"/>

            <com.duapps.screen.recorder.ui.FontTextView
                android:id="@+id/live_twitch_audience_counts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/live_twitch_audience_image_view"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="14dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>