<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="19dp"
        android:drawableStart="@drawable/durec_receivead_timeshow_coin"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$1.99 - $2.99/Download and use for 5+ times" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_view_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/durec_receivead_timeshow_coin"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_download_revenue"
        tools:text="$1.99/1000Views" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/timeshow_item_download_link_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="@string/durec_timeshow_download_link"
        android:textColor="@color/durec_head_item_text_color"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_download_view_revenue" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/durec_timeshow_download_link_button"
        app:layout_constraintStart_toStartOf="@id/timeshow_item_download_link_title"
        app:layout_constraintTop_toBottomOf="@id/timeshow_item_download_link_title"
        tools:text="https://www.baidu.com" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_link_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/durec_common_ok_btn_selector_reverse"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="80dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/durec_copy_link"
        android:textColor="@color/durec_common_ok_btn_text_color_reverse"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/durec_timeshow_download_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/durec_timeshow_download_link" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/durec_common_ok_btn_selector_reverse"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="80dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/durec_common_download"
        android:textColor="@color/durec_common_ok_btn_text_color_reverse"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/durec_timeshow_download_small_des"
        app:layout_constraintEnd_toEndOf="@+id/durec_timeshow_download_link_button"
        app:layout_constraintStart_toStartOf="@+id/durec_timeshow_download_link_button"
        app:layout_constraintTop_toTopOf="@+id/durec_timeshow_download_small_des" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:text="@string/durec_divided_into_price_description"
        android:textColor="@color/text_light_gray"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@id/durec_timeshow_download_link_button"
        app:layout_constraintStart_toStartOf="@id/durec_timeshow_download_link"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_download_link" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_timeshow_download_small_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:text="@string/durec_divided_into_price_small_description"
        android:textColor="@color/durec_colorPrimary"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@id/durec_timeshow_download_link_button"
        app:layout_constraintStart_toStartOf="@id/durec_timeshow_download_link"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_download_des" />


    <View
        android:id="@+id/timeshow_item_download_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="29dp"
        android:background="#e8e8e8"
        app:layout_constraintTop_toBottomOf="@id/durec_timeshow_download_small_des" />

</android.support.constraint.ConstraintLayout>