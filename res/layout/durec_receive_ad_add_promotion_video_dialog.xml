<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_video_url"
        android:layout_width="235dp"
        android:layout_height="86dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/durec_rtmp_edittext_bg"
        android:gravity="left|top"
        android:hint="@string/durec_add_youtube_video_hint"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="11dp"
        android:textColor="#535353"
        android:textColorHint="#888888"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/tx_video_url_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="left|top"
        android:text="@string/durec_promotion_video_url_intro"
        android:textColor="@color/durec_main_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_video_url"
        app:layout_constraintStart_toStartOf="@id/et_video_url"
        app:layout_constraintTop_toBottomOf="@id/et_video_url" />

</android.support.constraint.ConstraintLayout>