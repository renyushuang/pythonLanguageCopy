<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/durec_share_item_layout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/durec_common_btn_cover_selector"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/durec_share_icon"
        android:layout_width="36.67dp"
        android:layout_height="36.67dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <com.duapps.screen.recorder.ui.FontTextView
        android:id="@+id/durec_share_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#929292"
        android:textSize="10dp" />

</LinearLayout>